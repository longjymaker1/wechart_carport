/* pages/index_page/index_page.wxss */
page{
  height: 100%;
}
.container{
  height: 100%;
  display:flex;
  flex-direction: column;
  justify-content: flex-start;
  box-sizing: border-box;
  background-color: #f2f2f2;
  padding: 0%;
}
.location{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  height: 80rpx;
  padding: 10rpx;
  order: 1;
  background-color: #FF6633;
  border-color: #FF6633;
  /* margin-top: 10px; */
}

.location view{
  display: flex; /**指定flex 布局*/
  height:70rpx;
  justify-content:center; /**主轴居中*/
  align-items:center; /**交叉轴居中*/
}
.location .community{
  width:68%;
  height: 80rpx;
  background-color: #FF6633;
}
