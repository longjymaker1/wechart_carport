/* pages/user_detail/user_detail.wxss */
page{
  height: 100%;
  width: 100%;
}
.container{
  height: 100%;
  display:flex;
  flex-direction: column;
  justify-content: flex-start;
  box-sizing: border-box;
  background-color: #f2f2f2;
  padding: 1%;
}
.user_base_msg{
  background-color: rgb(211, 209, 209);
  width: 90%;
  margin-top: 10%;
  display: flex;
  flex-direction: column;
  border-radius: 8px;
  height: 300rpx;
}
.user_base_msg .profit, .base_msg{
  display: flex;
  flex-direction: row;
}
.user_base_msg .profit{
  display: flex;
  flex-direction: row;
  margin-bottom: 20px;
  align-items: center;
}
.userinfo{
  height: 130rpx;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: rgb(105, 104, 104);
  margin-left: 20rpx;
}
.base_msg{
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: space-around;
}
.base_msg image{
  height: 45rpx;
  width: 45rpx;
}
.my_car, .phone{
  display: flex;
  flex-direction: row;
}
.my_car, .phone view{
  margin-left: 5rpx;
}
.carport_msg{
  display: flex;
  flex-direction: column;
  width: 95%;
  height: 100%;
  margin-top: 10rpx;
  align-items: center;
}
.line{
  width: 100%;
  height: 50rpx;
  background-color: rgb(208, 208, 208);
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center; 
}