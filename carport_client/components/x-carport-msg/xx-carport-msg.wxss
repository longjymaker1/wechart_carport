/* carport_client/pages/carport_msg/carport_msg.wxss */

.container_carport_msg{
  width: 95%;
  height: 200rpx;
  background-color: #f5f2f2;
  border-width: 1rpx;
  border-color: #f5f2f2;
  border-style: solid;
  display: flex;
  flex-direction: row;
  border-radius: 7%;
  box-shadow:0px 2px 5px 5px #e6e4e4;
}
.container_carport_msg .carport_img{
  width: 250rpx;
  height: 200rpx;
  border-radius: 7%;
}
.msg{
  margin-left: 10px;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  font-size: 14px;
}
.msg .title{
  font-size: 15px;
  font-weight: 600;
}
.address{
  font-size: 13;
  font-weight: 500;
  color: #999999;
  font-family: sans-serif;
}
.type_price{
  display: flex;
  flex-direction: row;
}
.type_price .price{
  margin-left: 30px;
}
.type_price .price text{
  color: red;
}